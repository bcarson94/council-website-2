---
import Navigation from '../components/Navigation.astro'
import { SkipLinks } from 'accessible-astro-components'
import { Icon } from 'astro-icon'
---

<header>
  <SkipLinks />
  <Navigation>
    <li class="menu-item">
      <a href="/">Home</a>
    </li>
    <li class="menu-item">
      <a href="/Donate/">Donate</a>
    </li>
    <li class="menu-item has-dropdown">
      <button aria-haspopup="true" aria-expanded="false">Issues</button>
      <ul class="dropdown-menu">
        <li class="menu-item">
          <a href="/public-safety/">Public Safety</a>
        </li>
        <li class="menu-item">
          <a href="/water/">Water</a>
        </li>
        <li class="budget">
          <a href="/budget/">Budget</a>
        </li>
      </ul>
    </li>
    <li class="menu-item">
      <a href="/vote/">Vote</a>
    </li>
    <li class="menu-item type-icon">
      <a href="https://www.facebook.com/votebencarson" title="Facebook page">
        <Icon pack="ion" name="logo-facebook" />
      </a>
    </li>
  </Navigation>
</header>

<style lang="scss" is:global>
  @use '../assets/scss/base/outline' as *;

  header {
    .type-icon a {
      display: block;

      [astro-icon] {
        margin-top: -4px;
        width: 30px;

        path {
          fill: var(--action-color);
          transition: fill 0.2s ease-in-out;
        }
      }

      &:hover {
        [astro-icon] path {
          fill: var(--action-color-state);
        }
      }
    }
  }
</style>
